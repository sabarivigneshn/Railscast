<div class="container" >
  <div class="row row-centered" >
    <h2>Sign up</h2></br>


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email,placeholder:"Email" ,autofocus: true %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>

        <% end %><br />
        <%= f.password_field :password,placeholder:"Password", autocomplete: "off" %>
      </div></br>

      <div class="field">
        <%= f.password_field :password_confirmation,placeholder:"Password confirmation", autocomplete: "off" %>
      </div><br>

      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-primary" %>
      </div>
    <% end %><br>

<%#= render "devise/shared/links" %>
    </div>
</div>