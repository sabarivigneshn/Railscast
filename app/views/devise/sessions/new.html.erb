<div class="container">
  <div class="row row-centered">
    <h2>Log in</h2><br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),class:"form-signin") do |f| %>
      <div class="field form-group">
            <%= f.email_field :email,placeholder: "Email", autofocus: true %>
      </div>

      <div class="field form-group">
        <%= f.password_field :password,placeholder: "Password", autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions form-group">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>


