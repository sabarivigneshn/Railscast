<h2>New Episode</h2>
<div >
<%= form_tag('/episode', method: "post",:multipart => true) do %>

        <p class="form-group">
        <%= label_tag("name:")%>
        <%= text_field_tag "name" %>
        </p>
      <p class="form-group">
        <%= label_tag "Category:" %>
        <%= select_tag "category_id",options_for_select(Category.all.map{|c| [c.name,c.id]}),prompt: "Select Category" %>
      </p>
      <p class="form-group">
        <%= label_tag "Episodetype:" %>
        <%= select_tag "episode_type_id",options_for_select(EpisodeType.all.map{|p| [p.name,p.id]}),prompt: "Select EpisodeType" %>
      </p>
      <p class="form-group">
        <%= label_tag "about:" %>
        <%= text_area_tag "about" %>
      </p >
      <p class="form-group">
        <%= label_tag "upload_image" %>
        <%= file_field_tag "image" %>
      </p>
      <p class="form-group">
        <%= label_tag "upload_video" %>
        <%= file_field_tag "video" %>
      </p>
      <p class="form-group">
        <%= label_tag "release_date:" %>
        <%= text_field_tag "release_date",@episode.release_date, class: "datepicker"%>
      </p>
      <p class="form-group">
        <%= label_tag "duration:" %>
        <%= text_field_tag "duration",@episode.duration%>
      </p>
      <p class="form-group">
      <%= submit_tag "create" ,class: "btn btn-primary"%>
      </p>

<% end %>
  <%= link_to "back",episode_index_path %>
</div>

<script>
    $('.datepicker').datepicker();
</script>

